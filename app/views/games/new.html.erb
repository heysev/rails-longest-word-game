
 <%# // coder array de 10 lettres au hasard stockée dans variable @letters %>
<h1 class="p-3">🎲 New Game 🎲</h1>
<h2 class="p-2">Your letters</h2>
<% @letters.each do |letter|%>
  <p class="btn btn-primary row m-2 shadow rounded"> <%= letter %> </p>
<% end %>

<p class="mt-3"> What is the longest word you can find ? </p>
<form action="/score" method="post" data-turbo="false" >
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="" type="text" name="word" placeholder="Abracadabra...">
  <input type="submit" value="Send 💌 ">
</form>
